<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c0c0e">
    <TextView
        android:id="@+id/titleprincipal"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/blue"
        android:text="NOUVELLE DEPENSE" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:entries="@android:color/background_dark" />

    <EditText
        android:id="@+id/dateExpense"
        android:hint="Date*"
        android:inputType="date"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_calendar" />

    <EditText
        android:id="@+id/dateDeparture"
        android:hint="Date de départ*"
        android:inputType="date"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_calendar"/>

    <EditText
        android:id="@+id/dateArrival"
        android:hint="Date d'arrivée*"
        android:inputType="date"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_calendar" />

    <EditText
        android:id="@+id/DepartureCity"
        android:hint="Ville de départ*"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_city_profile" />

    <EditText
        android:id="@+id/ArrivalCity"
        android:hint="Ville d'arrivée*"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_city_profile" />

    <EditText
        android:id="@+id/kms"
        android:hint="Kilomètres*"
        android:inputType="number"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_city_profile" />

    <EditText
        android:id="@+id/durationTravel"
        android:hint="Durée du trajet (h)"
        android:inputType="number"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_duration" />

    <EditText
        android:id="@+id/amount"
        android:hint="Montant*"
        android:inputType="number"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_dashboard_refund" />

    <EditText
        android:id="@+id/details"
        android:hint="Ajouter des détails"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity=""
        android:paddingLeft="20dp"
        android:ems="10"
        android:textColor="@color/whiteOpacity"
        android:background="@drawable/custome_input_profile"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_comments" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textChampsOblig"
        android:layout_marginLeft="30dp"
        android:text="*champs obligatoires"
        android:textColor="#FFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/returnButton"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="15dp"
            android:background="@drawable/custome_button"
            android:drawableStart="@drawable/ic_return_button"
            />

        <Button
            android:id="@+id/btnAddProof"
            android:width="70dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="@drawable/custome_add_button"
            android:drawableTop="@drawable/apphoto"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/validButton"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/custome_button"
            android:drawableTop="@drawable/ic_button_valid"
            />


    </LinearLayout>

</LinearLayout>