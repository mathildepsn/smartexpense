<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context="com.example.mathi.smartexpense.ERDetailsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/blue"
        android:text="NOTE DE FRAIS - DETAILS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:layout_weight="1"
            android:background="@drawable/custome_button"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:text="Sauver" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:layout_weight="1"
            android:background="@drawable/custome_button"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:text="Soumettre" />
    </LinearLayout>

    <TextView
        android:id="@+id/numberER"
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="6dp"
        android:background="@color/blackOpacityButton"
        android:visibility="visible"
        android:text="Note de frais nÂ°" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:background="@color/blackOpacityButton"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ERStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Statut" />

        <TextView
            android:id="@+id/ERStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/blackOpacityButton"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ERDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="DATE" />

        <TextView
            android:id="@+id/ERCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VILLE" />
    </LinearLayout>

    <ListView
        android:id="@+id/listERDetails"
        android:layout_width="370dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_height="180dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/returnButtonERDetails"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custome_button"
            android:drawableStart="@drawable/ic_return_button"
            android:paddingLeft="15dp" />

        <Button
            android:id="@+id/addExpenseButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/custome_add_button"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>
